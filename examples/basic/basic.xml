<root>

<input>
	<!-- Three timer inputs, default interval value is 1000ms -->
	<timer name="timer" />
	<timer name="timerveryfast" interval="100"/>
	<timer name="timerfast" interval="500"/>
	<timer name="timerslow" interval="2000"/>
</input>

<scene name="Basic Example">

	<!-- Gray background -->
	<background color="219, 214, 214" />
	
	<!-- Five rectangles which are activated one after the other -->
	<roundrobin input="timerfast">
		<!-- After being activated the output will remain on the screen for 250ms -->
		<timed duration="250">
			<rectangle 
				color="0, 158, 232" 
				size="50, 50" 
				position="10, 50" />
		</timed>
		<timed duration="250">
			<rectangle 
				color="0, 158, 232" 
				size="50, 50" 
				position="70, 50" />
		</timed>
		<timed duration="250">
			<rectangle 
				color="0, 158, 232" 
				size="50, 50" 
				position="130, 50" />
		</timed>
		<timed duration="250">
			<rectangle 
				color="0, 158, 232" 
				size="50, 50" 
				position="190, 50" />
		</timed>
		<timed duration="250">
			<rectangle 
				color="0, 158, 232" 
				size="50, 50" 
				position="250, 50" />
		</timed>
	</roundrobin>
	
	<!-- An ellipse which is drawn permanently -->
	<ellipse
		color="234, 189, 102" 
		size="600, 300" 
		position="512, 350" />

	<!-- A long rectangle which is drawn permanently -->
	<rectangle 
		color="50, 50, 50" 
		size="290, 10" 
		position="10, 110" />

	<!-- Four rectangles which are activated on events from timerslow -->
	<!-- Two rectangles in the back, two in the front -->
	<timed duration="250" input="timerslow">
		<rectangle
			color="113, 153, 253" 
			size="120, 120" 
			position="790, 590" />
		<rectangle
			color="113, 153, 253"  
			size="120, 120" 
			position="900, 590" />
		<rectangle
			color="191, 222, 108" 
			size="100, 100" 
			position="800, 600" />
		<rectangle
			color="191, 222, 108"  
			size="100, 100" 
			position="910, 600" />
	</timed>
</scene>

</root>